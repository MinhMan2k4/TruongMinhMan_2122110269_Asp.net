@model List<TruongMinhMan_2122110269.Context.Category>
@{
    ViewBag.Title = "Danh mục sản phẩm";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content py-5">
    <div class="container">
        <h2 class="text-center text-primary mb-4">Danh mục sản phẩm</h2>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="img-wrap">
                            <img src="~/Content/images/items/@item.Avatar" class="card-img-top img-fluid rounded image-fixed" alt="@item.Name">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">
                                @Html.ActionLink(item.Name, "ProductCategory", "Category", new { @Id = item.Id }, new { @class = "text-decoration-none text-dark" })
                            </h5>
                        </div>
                    </div>
                </div> <!-- col.// -->
            }
        </div> <!-- row.// -->
    </div> <!-- container .// -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<!-- ========================= SECTION SUBSCRIBE ========================= -->
<section class="py-5 bg-light border-top">
    <div class="container text-center">
        <h3 class="text-primary mb-3">Đăng ký nhận tin</h3>
        <p class="mb-4">Nhận những xu hướng sản phẩm mới nhất và tin tức ngành công nghiệp trực tiếp trong hộp thư của bạn.</p>
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <form class="d-flex">
                    <input class="form-control form-control-lg me-2" placeholder="Nhập email của bạn" type="email">
                    <button type="submit" class="btn btn-warning btn-lg">
                        <i class="fa fa-envelope"></i> Đăng ký
                    </button>
                </form>
                <small class="form-text text-muted mt-2">Chúng tôi cam kết không chia sẻ email của bạn với bên thứ ba.</small>
            </div> <!-- col.// -->
        </div> <!-- row.// -->
    </div> <!-- container .// -->
</section>
<!-- ========================= SECTION SUBSCRIBE END// ========================= -->
<!-- CUSTOM CSS -->
<style>
    .img-wrap {
        width: 100%; /* Đảm bảo chiều rộng 100% */
        height: 200px; /* Đặt chiều cao cố định */
        overflow: hidden; /* Ẩn phần dư thừa nếu hình ảnh vượt quá khung */
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa; /* Nền sáng cho hình */
    }

    .image-fixed {
        width: auto; /* Duy trì tỷ lệ */
        height: 100%; /* Chiều cao bằng khung */
        object-fit: cover; /* Cắt hình để vừa với khung */
    }
</style>
