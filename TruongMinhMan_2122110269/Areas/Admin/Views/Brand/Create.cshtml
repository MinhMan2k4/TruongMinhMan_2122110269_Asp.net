@model TruongMinhMan_2122110269.Context.Brand

@{
    ViewBag.Title = "Create Brand";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Create Brand</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="card shadow-sm p-4">
            <h4 class="text-primary">Brand Details</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <!-- Name Field -->
            <div class="mb-3">
                @Html.LabelFor(model => model.Name, new { @class = "form-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter brand name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <!-- Avatar Field -->
            <div class="mb-3">
                @Html.LabelFor(model => model.Avatar, new { @class = "form-label" })
                <input type="file" name="AvatarUpload" class="form-control" />
                @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
            </div>

            <!-- Slug Field -->
            <div class="mb-3">
                @Html.LabelFor(model => model.Slug, new { @class = "form-label" })
                @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter slug for the brand" } })
                @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-end">
                <input type="submit" value="Create" class="btn btn-primary me-2" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    }
</div>
