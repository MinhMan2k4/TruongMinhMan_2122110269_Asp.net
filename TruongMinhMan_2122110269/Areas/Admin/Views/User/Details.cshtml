@model TruongMinhMan_2122110269.Context.User

@{
    ViewBag.Title = "Chi tiết người dùng";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h3>Thông tin chi tiết người dùng</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4 class="text-primary">Họ:</h4>
                    <p>@Model.FirstName</p>

                    <h4 class="text-primary">Tên:</h4>
                    <p>@Model.LastName</p>

                    <h4 class="text-primary">Email:</h4>
                    <p>@Model.Email</p>
                </div>
                <div class="col-md-6">
                    <h4 class="text-primary">Mật khẩu:</h4>
                    <p class="text-muted">*******</p>

                    <h4 class="text-primary">Quyền Admin:</h4>
                    <p>
                        @if (Model.IsAdmin ?? false)
                        {
                            <span class="badge bg-success">Có</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Không</span>
                        }

                    </p>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Edit", "User", new { id = Model.Id })" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index", "User")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
