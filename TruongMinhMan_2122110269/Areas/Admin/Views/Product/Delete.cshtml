@model TruongMinhMan_2122110269.Context.Product

@{
    ViewBag.Title = "Delete Product";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h2 class="text-center">Delete Product</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center mb-4 text-danger">Are you sure you want to delete this product?</h5>
            <div class="row mb-3">
                <div class="col-md-4">
                    <img src="~/Content/images/items/@Model.Avatar" alt="Product Image" class="img-fluid rounded" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Short Description</dt>
                        <dd class="col-sm-8">@Model.ShortDes</dd>

                        <dt class="col-sm-4">Full Description</dt>
                        <dd class="col-sm-8">@Model.FullDescription</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price</dd>

                        <dt class="col-sm-4">Discount Price</dt>
                        <dd class="col-sm-8">@Model.PriceDiscount</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category.Name</dd>

                        <dt class="col-sm-4">Brand</dt>
                        <dd class="col-sm-8">@Model.Brand.Name</dd>

                        <dt class="col-sm-4">Display Order</dt>
                        <dd class="col-sm-8">@Model.DisplayOrder</dd>

                        <dt class="col-sm-4">Created On</dt>
                        <dd class="col-sm-8">@Model.CreatedOnUtc</dd>

                        <dt class="col-sm-4">Updated On</dt>
                        <dd class="col-sm-8">@Model.UpdatedOnUtc</dd>
                    </dl>
                </div>
            </div>
            <div class="text-center">
                @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-danger me-3">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                }
            </div>
        </div>
    </div>
</div>
