@model TruongMinhMan_2122110269.Context.Product

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h3>Thông tin chi tiết sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    <img src="@Url.Content("~/Content/images/items/" + Model.Avatar)" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height: 300px;">
                </div>
                <div class="col-md-8">
                    <h4 class="text-primary">Tên sản phẩm:</h4>
                    <p>@Model.Name</p>

                    <h4 class="text-primary">Mô tả ngắn:</h4>
                    <p>@Model.ShortDes</p>

                    <h4 class="text-primary">Mô tả đầy đủ:</h4>
                    <p>@Model.FullDescription</p>

                    <h4 class="text-primary">Giá:</h4>
                    <p><strong>@string.Format("{0:N0} VNĐ", Model.Price)</strong></p>

                    @if (Model.PriceDiscount != null && Model.PriceDiscount > 0)
                    {
                        <h4 class="text-primary">Giá khuyến mãi:</h4>
                        <p class="text-danger"><strong>@string.Format("{0:N0} VNĐ", Model.PriceDiscount)</strong></p>
                    }

                    <h4 class="text-primary">Loại sản phẩm:</h4>
                    <p>@Model.TypeId</p>

                    <h4 class="text-primary">Slug:</h4>
                    <p>@Model.Slug</p>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary">Thông tin bổ sung:</h5>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>Hiển thị trang chủ:</strong> @Model.ShowOnHomePage
                        </li>
                        <li class="list-group-item">
                            <strong>Thứ tự hiển thị:</strong> @Model.DisplayOrder
                        </li>
                        <li class="list-group-item">
                            <strong>Ngày tạo:</strong> @Model.CreatedOnUtc
                        </li>
                        <li class="list-group-item">
                            <strong>Ngày cập nhật:</strong> @Model.UpdatedOnUtc
                        </li>
                    </ul>
                </div>

                <div class="col-md-6">
                    <h5 class="text-primary">Thông tin danh mục:</h5>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>Thương hiệu:</strong> @Model.Brand?.Name ?? "Không có"
                        </li>
                        <li class="list-group-item">
                            <strong>Danh mục:</strong> @Model.Category?.Name ?? "Không có"
                        </li>
                        <li class="list-group-item">
                            <strong>Đã xóa:</strong> @Model.Deleted
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Edit", "Product", new { id = Model.Id })" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
