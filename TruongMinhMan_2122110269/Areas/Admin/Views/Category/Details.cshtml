@model TruongMinhMan_2122110269.Context.Category

@{
    ViewBag.Title = "Chi tiết danh mục";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h3>Thông tin chi tiết danh mục</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="@Url.Content("~/Content/images/items/" + Model.Avatar)" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height: 300px;">
                    }
                    else
                    {
                        <p class="text-muted">Không có ảnh</p>
                    }
                </div>
                <div class="col-md-8">
                    <h4 class="text-primary">Tên danh mục:</h4>
                    <p>@Model.Name</p>

                    <h4 class="text-primary">Slug:</h4>
                    <p>@Model.Slug</p>

                    <h4 class="text-primary">Hiển thị trang chủ:</h4>
                    <p>@(Model.ShowOnHomePage ?? false ? "Có" : "Không")</p>

                    <h4 class="text-primary">Thứ tự hiển thị:</h4>
                    <p>@Model.DisplayOrder</p>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary">Thông tin bổ sung:</h5>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>Đã xóa:</strong> @(Model.Deleted ?? false ? "Có" : "Không")
                        </li>
                        <li class="list-group-item">
                            <strong>Ngày tạo:</strong> @Model.CreatedOnUtc
                        </li>
                        <li class="list-group-item">
                            <strong>Ngày cập nhật:</strong> @Model.UpdatedOnUtc
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Edit", "Category", new { id = Model.Id })" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
